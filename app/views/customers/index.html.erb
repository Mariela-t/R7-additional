<p style="color: green"><%= notice %></p>

<h1>Customers</h1>


<table class="table table-striped">
  <thead>
  <tr>
    <th> Name </th>
    <th> Number of Items </th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.full_name %></td>
        <td><%= customer.orders.count %></td>
        <td><%= button_to 'Show', customer, method: :get, class: "btn btn-success" %></td>
        <td><%= button_to 'Edit', edit_customer_path(customer), method: :get, class: "btn btn-success" %></td>
        <td><%= button_to "Delete", customer, method: :delete, class: "btn btn-success", data: { turbo_confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'New Order', new_order_path, class: "btn btn-success" %>
</p>
<p>
  <%= link_to "New customer", new_customer_path, class: "btn btn-success" %>
</p>